{
  "name": "fastify-starter",
  "version": "1.0.0",
  "description": "Modern Fastify starter template with TypeScript and latest conventions",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "APP_REGION=sg APP_ENV=development tsdown --watch --on-success \"pnpm run start:dev\"",
    "start:dev": "sleep 3 && APP_REGION=sg APP_ENV=development node ./dist/server.js",
    "start": "node ./dist/server.js",
    "start:prod": "NODE_ENV=production node ./dist/server.js",
    "build": "NODE_ENV=production tsdown",
    "build:dev": "tsdown",
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "clean": "rimraf .tmp dist .tsbuildinfo",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "deps:check": "pnpm outdated",
    "deps:update": "pnpm update"
  },
  "keywords": [
    "fastify",
    "typescript",
    "rest-api",
    "nodejs",
    "starter",
    "modern"
  ],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cors": "^11.0.1",
    "@fastify/static": "^8.2.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dayjs": "^1.11.13",
    "fastify": "^5.4.0",
    "ioredis": "^5.6.1",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "mysql": "^2.18.1",
    "pino-pretty": "^13.0.0",
    "uuid": "^12.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.13",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.31.0",
    "rimraf": "^6.0.1",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
